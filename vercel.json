{
  "version": 2,
  "functions": {
    "api/**/*.js": {
      "maxDuration": 30
    }
  },
  "headers": [
    {
      "source": "/api/paymob/webhook",
      "headers": [
        { "key": "Access-Control-Allow-Origin", "value": "*" },
        { "key": "Access-Control-Allow-Methods", "value": "POST,OPTIONS" }
      ]
    }
  ],
  "routes": [
    {
      "src": "/api/paymob/create-payment",
      "dest": "/api/paymob/create-payment.js"
    },
    {
      "src": "/api/paymob/webhook",
      "dest": "/api/paymob/webhook.js"
    },
    {
      "src": "/api/check-status",
      "dest": "/api/check-status.js"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}