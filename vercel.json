{
  "functions": {
    "api/**/*.js": {
      "runtime": "nodejs18.x",
      "includeFiles": ["**/*.js"]
    }
  },
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1",
      "methods": ["GET", "POST", "OPTIONS"]
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}